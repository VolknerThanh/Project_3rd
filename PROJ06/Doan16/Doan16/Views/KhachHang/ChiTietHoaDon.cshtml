@using Doan16.Models
@model List<ChiTietHoaDon>

@{
    ViewBag.Title = "ChiTietHoaDon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; text-transform:uppercase; font-weight:900; margin: 1.5em 0">Chi tiết hóa đơn : @Model.First().HoaDon.soHD </h1>

@if (@Model.First().HoaDon.Status == 2)
{
    <h3>Tình Trạng : <span style="color: red;"><strong>ĐANG NỢ</strong></span></h3>
    <h4>Tổng Tiền Nợ : <span>@Model.First().HoaDon.KhachHang.SoTienConNo</span></h4>
}
else
{
    <h3>Tình Trạng : <span style="color: red;"><strong>ĐANG HẸN</strong></span></h3>
}
<hr />
<br />
<table align="center" border="1" width="100%">
    <tbody>
        <tr style="text-align:center">
            <td>Tên Sản Phẩm</td>
            <td>Số Lượng Mua</td>
            <td>Đơn Giá</td>
            <td>Tổng Tiền</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>@item.NuocGK.tenNGK</td>
                <td>@item.soluongmua</td>
                <td>@item.NuocGK.dongia VNĐ</td>
                <td>@item.thanhtien VNĐ</td>
            </tr>
        }
    </tbody>
</table>