<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../images/icon.ico" type="image/x-icon">
    <title>Bootstrap E-Commerce Template- DIGI Shop mini</title>
    <!-- Bootstrap core CSS -->
    <link href="../../lib/assets/css/bootstrap.css" rel="stylesheet">
    <!-- Fontawesome core CSS -->
    <link href="../../lib/assets/css/font-awesome.min.css" rel="stylesheet" />
    <!--GOOGLE FONT -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <!--Slide Show Css -->
    <link href="../../lib/assets/ItemSlider/css/main-style.css" rel="stylesheet" />
    <!-- custom CSS here -->
    <link href="../../lib/assets/css/style.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>



    <script src="../../Scripts/jquery.js"></script>
    <script>
        var first_scroll_position = 0;
        /* the menu bar become transparent when it hits the top */

        window.addEventListener('scroll', function (e) {
            var after_scroll_position = window.scrollY;
            /* the menu bar become transparent when it hits the top */

            if (after_scroll_position > first_scroll_position) {
                $('#menu').fadeOut(600);
            } else {
                $('#menu').fadeIn(600);
            }
            // update first position
            first_scroll_position = after_scroll_position;
        });
    </script>
</head>
<body>

    <div style="position:fixed; z-index:1000; width:100%;">
        <nav class="navbar navbar-default" role="navigation" id="menu">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" style="padding: 15px 20px 0px 20px;" href="@Url.Action("Index", "SanPham")"><strong>SHOP</strong></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    @*<div class=" navbar-right">
                        @{ Html.RenderAction("TimKiem", "SanPham");}
                    </div>*@

                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index", "SanPham")"><i class="fa fa-home" style="font-size:18px"></i> Trang Chủ</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-phone" style="font-size:18px"></i> Liên Hệ<b class="caret"></b></a>
                            <ul class="dropdown-menu" style="width: 300px;">
                                <li><p style="margin: 5px 20px"><strong><i class="fa fa-phone" style="font-size:18px"></i> Call: </strong>+09-456-567-890</p></li>
                                <li class="divider"></li>
                                <li><p style="margin: 5px 20px"><strong><i class="fa fa-envelope" style="font-size:18px"></i> Mail: </strong>info@nuocgiaikhat.com</p></li>
                                <li class="divider"></li>
                                <li>
                                    <p style="margin: 5px 20px">
                                        <strong><i class="fa fa-map-marker" style="font-size:18px"></i> Address: </strong>
                                        <div style="margin: 5px 20px">
                                            234, New york Street,<br />
                                            Just Location, USA
                                        </div>
                                    </p>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("DisplayCart", "Cart")">
                                <i class="fa fa-shopping-cart" style="font-size:18px"></i>
                                &nbsp;&nbsp;Giỏ Hàng @{ Html.RenderAction("CartInformation", "Cart");}
                            </a>
                        </li>
                        @if (Session["TenDangNhap"] != null)
                        {
                            <li>
                                <a href="#"><i class="fa fa-user" style="font-size:18px"></i>&nbsp;&nbsp;<strong>@Session["TenDangNhap"] </strong></a>
                            </li>

                            <li>
                                @using (Html.BeginForm("Logout", "KhachHang", FormMethod.Post))
                                {
                                    <button type="submit" class="btn btn-primary" style="margin-top: 8px;"><i class="fa fa-sign-out" style="font-size:18px"></i> Đăng Xuất</button>
                                }
                            </li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("DangNhap", "KhachHang")"><i class="fa fa-sign-in" style="font-size:18px"></i> Đăng Nhập</a></li>
                        }

                    </ul>


                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </div>

    <div class="container" style="position: relative; top : 100px; margin-bottom: 100px;">
        <div style="min-height : 500px">
            @RenderBody()
        </div>
    </div>

    <div class="col-md-12 end-box " style="text-align:center; position:relative; top: 350px;">
        &copy; 2018 | &nbsp; All Rights Reserved | &nbsp; www.nuocgiaikhat.com | &nbsp; 24x7 support | &nbsp; Email us: info@nuocgiaikhat.com
    </div>
    <!-- /.col -->
    <!--Footer end -->
    <!--Core JavaScript file  -->
