@using Doan16.Models
@model List<ChiTietPhieuGiaoHang>

@{
    ViewBag.Title = "ChiTietPhieuGiaoHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Danh Sách Chi Tiết Đơn Giao Hàng</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.ID_giaoHang</li>
    </ol>
    <div class="card-header">
        <i class="fa fa-table"></i> CHI TIẾT ĐƠN ĐẶT HÀNG ( ID : @ViewBag.ID_giaoHang )
    </div>
    <div class="card-body">
        <div class="row">
            <div style="margin-left:2em; margin-bottom:1em; font-weight:bold">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr style="text-align:center">
                        <th style="width:11%;">ID Phiếu</th>
                        <th style="width:20%;">Tên Sản Phẩm</th>
                        <th style="width:18%;">Nhà Cung Ứng</th>
                        <td style="width:10%;">SL Giao</td>
                        <th style="width:20%;">Đơn Giá</th>
                        <th style="width:40%">Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr style="text-align:center">
                        <th style="width:11%;">ID Phiếu</th>
                        <th style="width:20%;">Tên Sản Phẩm</th>
                        <th style="width:18%;">Nhà Cung Ứng</th>
                        <td style="width:10%;">SL Giao</td>
                        <th style="width:20%;">Đơn Giá</th>
                        <th style="width:40%">Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="text-align:center">
                            <td>@item.id_PhieuGiao</td>
                            <td>@item.NuocGK.tenNGK</td>
                            <td>@item.NuocGK.LoaiNGK.NhaCungUng1.TenNhaCungUng</td>
                            <td>@item.SoLuongGiao</td>
                            <td>@item.DonGiaGiao</td>
                            <td>
                                @*<button class="btn" style="width:120px; margin-right:1em;"> @Html.ActionLink("Xem chi tiết", "ChiTietPhieuGiaoHang", new { @idDGH = item.id_PhieuGiao })</button>
                                    <button class="btn" style="width:120px;"> @Html.ActionLink("Xoá đơn hàng", "XoaDDH", new { @id = item.id_DonDatHang })</button>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@Html.ActionLink("Trở Lại Danh Sách", "DanhSach")